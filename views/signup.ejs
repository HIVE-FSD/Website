<!-- signup.ejs -->

<div class="form-container">
    <p class="auth-title">Sign up</p>
    <% if (req.query.signupSuccess) { %>
        <div class="alert alert-success" role="alert">
            Account created successfully. You can now login.
        </div>
        <% } %>
            <form class="auth-form" method="POST" action="/signup">
                <div class="input-group">
                    <label for="username">Username</label>
                    <input type="text" name="username" id="username" placeholder="">
                </div>
                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" placeholder="">
                </div>
                <div class="input-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" placeholder="">
                </div>
                <button type="submit" class="auth-btn">Sign in</button> <!-- Submit button added -->
            </form>

            <p class="alt-auth">Already have an account?
                <a rel="noopener noreferrer" href="/login" class="">Log in</a>
            </p>
</div>